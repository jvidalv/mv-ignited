{
  "compilerOptions": {
    "strict": true,
    "module": "commonjs",
    "target": "ESNext",
    "esModuleInterop": true,
    "sourceMap": false,
    "rootDir": "src",
    "outDir": "dist/js",
    "noEmitOnError": true,
    "jsx": "react",
    "typeRoots": ["node_modules/@types", "src/types/globals.d.ts"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "tests", "tools", "*.config.ts"]
}
