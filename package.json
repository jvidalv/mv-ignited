{
  "name": "mv-ignited",
  "version": "6.1.0",
  "description": "Extensión de navegador para el foro de mediavida.com que enriquece la experiencia de usuario añadiendo y mejorando funcionalidades.",
  "main": "index.js",
  "scripts": {
    "watch": "webpack --config webpack/webpack.dev.js --watch",
    "build": "webpack --config webpack/webpack.prod.js",
    "build:chrome": "rimraf dist-chrome && webpack --config webpack/webpack.chrome.js",
    "build:chrome:zip": "yarn build:chrome && cd dist-chrome && zip -r ../mv-ignited-chrome.zip . && cd .. && echo 'Chrome build zipped to mv-ignited-chrome.zip'",
    "build:firefox": "rimraf dist-firefox && webpack --config webpack/webpack.firefox.js && sed 's/\"service_worker\": \"background.js\"/\"scripts\": [\"background.js\"]/g' dist-firefox/manifest.json > tmp_file && mv tmp_file dist-firefox/manifest.json",
    "build:firefox:zip": "yarn build:firefox && cd dist-firefox && zip -r ../mv-ignited-firefox.zip . && cd .. && echo 'Firefox build zipped to mv-ignited-firefox.zip'",
    "clean": "rimraf dist dist-chrome dist-firefox mv-ignited-chrome.zip mv-ignited-firefox.zip",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:snapshots": "ts-node tools/fetch-mediavida-snapshots.ts",
    "style": "prettier --write \"src/**/*.{ts,tsx}\""
  },
  "author": "Josep Vidal",
  "license": "MIT",
  "repository": {
    "type": "git"
  },
  "dependencies": {
    "@tanstack/query-async-storage-persister": "^5.29.1",
    "@tanstack/react-query": "^5.29.0",
    "@tanstack/react-query-persist-client": "^5.29.0",
    "@tippyjs/react": "^4.2.6",
    "clsx": "^2.1.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-hot-toast": "^2.4.1",
    "usehooks-ts": "^3.1.0",
    "webfontloader": "^1.6.28",
    "zustand": "^4.5.2"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/chrome": "0.0.263",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.6",
    "@types/react-dom": "^19.2.3",
    "@types/webfontloader": "^1.6.38",
    "@typescript-eslint/eslint-plugin": "7.2.0",
    "@typescript-eslint/parser": "7.2.0",
    "@vitest/ui": "^4.0.12",
    "autoprefixer": "^10.4.22",
    "copy-webpack-plugin": "12.0.2",
    "css-loader": "6.10.0",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.34.1",
    "glob": "10.3.10",
    "happy-dom": "^20.0.10",
    "jsdom": "^27.2.0",
    "mini-css-extract-plugin": "^2.9.4",
    "postcss": "^8.5.6",
    "postcss-loader": "8.1.1",
    "prettier": "^3.6.2",
    "rimraf": "5.0.5",
    "style-loader": "3.3.4",
    "tailwindcss": "3.4.1",
    "ts-loader": "9.5.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "vitest": "^4.0.12",
    "webpack": "^5.103.0",
    "webpack-cli": "^6.0.1",
    "webpack-merge": "^6.0.1"
  },
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}
